# ==============================================
# Dockerfile.api - Sadece FastAPI (FIXED VERSION)
# ==============================================
FROM python:3.11-slim AS api

WORKDIR /app

# PostgreSQL client + curl for health checks
RUN apt-get update && apt-get install -y postgresql-client curl && rm -rf /var/lib/apt/lists/*

# Python dependencies (API için gerekli)
COPY requirements.api.txt .
RUN pip install -r requirements.api.txt

# PyTorch CPU-only (embedding için gerekli)
RUN pip install torch==2.1.0 --index-url https://download.pytorch.org/whl/cpu

# FIXED: Install compatible versions step by step
RUN pip install huggingface_hub==0.17.3
RUN pip install transformers==4.35.2
RUN pip install sentence-transformers==2.2.2

# Copy API-related files
COPY myapp.py .
COPY embedding_service.py .
COPY vector_operations.py .
COPY openai_service.py .
COPY vector_search_quality_patch.py .

# Create model cache directory
RUN mkdir -p /app/model_cache

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
  CMD curl -f http://localhost:8000/health || exit 1

# FastAPI'nin tek işi API servisi
EXPOSE 8000
CMD ["uvicorn", "myapp:app", "--host", "0.0.0.0", "--port", "8000"]